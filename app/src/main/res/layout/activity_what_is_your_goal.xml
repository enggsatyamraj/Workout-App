<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".whatIsYourGoal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/fitness_goal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="WHAT IS YOUR FITNESS GOAL?"
        android:fontFamily="@font/staatliches"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Knowing your goal helps us
tailor your experience"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/build_muscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build muscle"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/stay_healthy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stay healthy"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/get_fit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get fit"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/lose_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lose weight"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="continue"
        android:textColor="@color/black"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:textAlignment="textStart"
        android:textSize="25sp"
        android:drawableRight="@drawable/_my_right_arrow"
        android:fontFamily="@font/staatliches"/>



</LinearLayout>